-e703           // Info 703: Shift left of signed quantity (long)
-e717           // Info 717: do ... while(0);
-e726           // Info 726: Extraneous comma ignored
-e763           // Info 763: Redundant declaration for symbol 'xxx' previously declared
-e788           // Info 788: enum constant 'BLAH' not used within defaulted switch

-e801           // Info 801: Use of goto is deprecated

-e1511          // Warning 1511: Member hides non-virtual member
-e1536          // Warning 1536: Exposing low access member 'xxx::xxx'
-e1551          // Warning 1551: Function may throw exception '...' in destructor

-e1712          // Info 1712: default constructor not defined for class xxx
-e1716          // Info 1716: Virtual member function 'xxx::xxx(xxx)' (line xxx, file xxx.h) not referenced
-e1736 	        // Redundant access specifier (private)
-e1735          // Virtual function has default parameter
-e1768          // Info 1768: Virtual function 'xxx::xxx' has an access (protected) different
                // from the access (public) in the base class
-e1774          // Info 1774: Could use dynamic_cast to downcast polymorphic type 'xxx'

-esym(528, ctor, dtor)  // Warning 528: Symbol 'ctor(void)' (line ?, file ??) not referenced
-esym(818, argv)
-esym(715, argv, argc)
-esym(666, assert)      // Expression with side effects passed to repeated parameter Integer of macro 'assert'

// Suppress certain errors if they occur in library header files:
-elib(46)

// Deal with built-in
+d"__builtin_offsetof(__typ,__id)=((size_t)&(((__typ*)0)->__id))"
+d"__builtin_islessequal(__x,__y)=(__x <= __y)"
+d"__builtin_inff()=(1.0/0.0)"
+d"__builtin_nanf()=(0.0/0.0)"

